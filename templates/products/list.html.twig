{# templates/product_information/list.html.twig #}

{% extends "base.html.twig" %}

{% block title %}
  Liste produits -
  {{ parent() }}
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
  <div class="col-lg-9">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
      <h1 class="display-3">Liste de produits</h1>
      <p class="lead">
        Yeah man, mate mon stock de prod !
      </p>
      <a href="#" class="btn btn-primary btn-lg">Appelle mam√®ne !</a>
    </header>

    <!-- Page Features -->
    <div class="row text-center">

      {% for product in list_products %}
      <a href="{{ path('app_product_information', {'id': product.getId}) }}">
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card">
            {% if img_bool %} {# Validation if img exist #}
              <img class="card-img-top" src="{{ img_small }}" alt="" width="253" height="164">
            {% else %}
              <img class="card-img-top" src="{{ asset('img/no_img.png') }}" alt="Aucune image" width="253" height="164">
            {% endif %}
            <div class="card-body">
              <h4 class="card-title">
              </br/>
                {{ product.getProductName }}
              </h4>
              <p class="card-text">
                {{ product.getLastModifiedDatetime|date('d-m-Y H:i') }}
              </p>
              <p class="card-text">
                {{ product.viewBrand }}
              </p>
            </div>
            <div class="card-footer">
              <a href="{{ path('app_product_information', {'id': product.getId}) }}" class="btn btn-primary">
                Voir le produit
              </a>
            </div>
          </div>
        </div>
      </a>
      {% endfor %}

    </div>
    <!-- /.row -->

  </div>
  <!-- /.col-lg-9 -->
{% endblock %}
